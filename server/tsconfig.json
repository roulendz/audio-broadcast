{
    "compilerOptions": {
        "target": "ES2020", // Node.js version compatibility
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true, // To import streams.json
        "sourceMap": true,
        "baseUrl": ".", // Allows paths relative to root
        "noEmit": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}